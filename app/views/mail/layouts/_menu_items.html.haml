= link_to channels_path, class: "item #{'active' if active == :channels}" do
  %i.icon.rss
  Channels
- path = I18n.locale == :en ? guten_books_path : aozora_books_path
= link_to path, class: "item #{'active' if active == :books}" do
  %i.icon.search
  Books
- if current_user
  = link_to user_path(current_user), class: "item #{'active' if active == :settings}" do
    %i.icon.cog
    Settings
- else
  .item
    %i.icon.cog
    Settings
