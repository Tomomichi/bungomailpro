.hidden.sm:flex.items-center.px-2.py-3.text-sm.border-b.border-gray-100
  %div(class="w-1/4")
    = link_to author_category_book_path(author_id: book.author_id, category_id: book.category_id, id: book.id), class: 'text-link' do
      = book.title.truncate(100)
      - if book.rights_reserved?
        %small.text-xs
          %i.far.fa-copyright
    - if lang_locale == :ja && book.try(:published_at)
      %br
      %small (#{book.try(:published_at)}å¹´)
  %div(class="w-1/5")
    = link_to author_category_books_path(author_id: book.author_id, category_id: category[:id]), class: 'text-link' do
      = book.author_name
    - if lang_locale == :en
      %br
      %small (#{book.try(:birth_year)}-#{book.try(:death_year)})
  %div(class="w-1/5")
    = link_to author_category_books_path(author_id: book.author_id, category_id: book.category_id) do
      = category_label(book.category)
    &nbsp;
    %small.text-xs
      = book.words_count.to_s(:delimited)
      = t :words, scope: [:search, :defaults]
  - if lang_locale == :en && %w(flash shortshort).include?(@category[:id])
    %td
      %small #{book.try(:ngsl_ratio) || '--'}%
  %div(class="w-1/12")
    .text-yellow-300= access_count_stars(book.access_rating(:stars))
  %div(class="w-1/4")
    %small.text-xs.text-gray-500
      = truncated_beginning(book.beginning)

.block.sm:hidden.border-b.border-gray-100.px-2.py-2
  .flex.items-center.text-sm.mb-2
    %div(class="w-1/3")
      = link_to author_category_book_path(author_id: book.author_id, category_id: book.category_id, id: book.id), class: 'text-link'  do
        = book.title.truncate(75)
        - if book.rights_reserved?
          %small
            %i.far.fa-copyright
    %div(class="w-1/3")
      = link_to author_category_books_path(author_id: book.author_id, category_id: category[:id]), class: 'text-link'  do
        = book.author_name
    %div.text-xs(class="w-1/2")
      .flex.justify-between
        = link_to author_category_books_path(author_id: book.author_id, category_id: book.category_id) do
          = category_label(book.category)
        .text-yellow-300= access_count_stars(book.access_rating(:stars))
      - if lang_locale == :en && %w(flash shortshort).include?(@category[:id])
        %div
          %small NGSL: #{book.try(:ngsl_ratio) || '--'}%
  .truncate.text-xs.text-gray-500
    = book.beginning
