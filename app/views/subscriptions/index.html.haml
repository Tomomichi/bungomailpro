- content_for :breadcrumb do
  マイページ
  %i.icon.right.angle.divider
  購読中コース

%h1.ui.header マイページ

.ui.secondary.pointing.menu
  .active.item 購読中コース
  = link_to '作成したコース', owned_courses_path, class: 'item'

.ui.middle.alligned.divided.relaxed.large.list
  - @user_courses.each do |user_course|
    - course = user_course.course
    .item
      .right.floated.content
        = link_to subscription_path(user_course), method: 'delete', class: 'ui black basic icon small button', 'data-tooltip'=>'購読解除', 'data-inverted'=>'', data: {confirm: '購読を解除します。本当によろしいですか？'} do
          %i.icon.trash
      .content
        .header
          = link_to course_path(course) do
            = course.title
          %span.ui.mini.label{class: label_class(user_course.status)}
            = label_name user_course.status
        %small.description
          = course.description.truncate(30)
