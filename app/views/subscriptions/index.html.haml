- content_for :breadcrumb do
  = link_to 'マイページ', user_path(current_user.token), class: 'item'
  %i.icon.right.angle.divider
  配信リスト

%h1.ui.header マイページ

.ui.secondary.pointing.menu
  = link_to 'プロフィール', user_path(current_user.token), class: 'item'
  .active.item 配信リスト


.ui.secondary.basic.center.aligned.segment
  = link_to books_path, class: 'ui blue button' do
    %i.icon.search
    作品を検索する

.ui.middle.alligned.divided.relaxed.large.ordered.list
  - @subscriptions.each do |subscription|
    .item
      .right.floated.content
        = link_to subscription_path(subscription), method: 'delete', class: 'ui black basic icon small button', 'data-tooltip'=>'削除', 'data-inverted'=>'', data: {confirm: 'リストから削除します。本当によろしいですか？'} do
          %i.icon.trash
      .content
        - book = subscription.book
        .header
          = book.title
          %small
            &nbsp;
            = link_to book.aozora_card_url, target: '_blank' do
              %i.icon.mini.external
        .description
          %small= book.author
