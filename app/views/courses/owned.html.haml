- content_for :breadcrumb do
  = link_to 'マイページ', subscriptions_path, class: 'section'
  %i.icon.right.angle.divider
  作成したコース

%h1.ui.header マイページ

.ui.secondary.pointing.menu
  = link_to '購読中コース', subscriptions_path, class: 'item'
  .active.item 作成したコース

.ui.secondary.basic.center.aligned.segment
  = link_to  new_course_path, class: 'ui red button' do
    %i.icon.plus
    新しいコースを作成する


.ui.middle.alligned.divided.relaxed.large.list
  - @courses.each do |course|
    .item
      .right.floated.content
        - if course.status == 1
          = link_to publish_course_path(course), method: 'post', class: 'ui red basic icon small button', 'data-tooltip'=>'公開', 'data-inverted'=>'', data: {confirm: 'コースを公開すると、本の編集はできなくなります。本当によろしいですか？'} do
            %i.icon.globe
        = link_to edit_course_path(course), class: 'ui blue basic icon small button', 'data-tooltip'=>'編集', 'data-inverted'=>'' do
          %i.icon.write
        = link_to course_path(course), method: 'delete', class: 'ui black basic icon small button', 'data-tooltip'=>'削除', 'data-inverted'=>'', data: {confirm: 'コースを削除します。本当によろしいですか？'} do
          %i.icon.trash
      .content
        .header
          = link_to course_path(course) do
            = course.title
          %span.ui.mini.label{class: course.status==1 ? 'default' : 'orange'}
            = course.status==1 ? '下書き' : '公開中'
        %small.description
          = course.description.truncate(30)
