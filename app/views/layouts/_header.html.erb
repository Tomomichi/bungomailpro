<header>
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8 h-20" aria-label="Global">
    <!-- Logo -->
    <div class="flex items-center gap-x-12">
      <%= link_to root_path, class: "flex items-center space-x-4" do %>
        <img class="inline-block h-6 w-6 sm:h-8 sm:w-8 rounded-full shadow" src="/favicon.ico" alt="">
        <img class="h-6 w-auto sm:h-8" src="/assets/images/logo_text.png" alt="ブンゴウメール">
      <% end %>
    </div>

    <!-- PC -->
    <div class="hidden sm:block">
      <% if current_user %>
        <div class="flex items-center py-2 space-x-8">
          <%= link_to distributions_path, class: "block text-sm text-gray-700 hover:opacity-75", role: 'menuitem', tabindex: -1 do %>
            <span>購読済みの配信</span>
          <% end %>
          <%= link_to books_path, class: "block text-sm px-4 py-2.5 rounded-md bg-indigo-600 text-white hover:opacity-75 flex items-center space-x-1", role: 'menuitem', tabindex: -1 do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
            <span>新規配信を作成する</span>
          <% end %>

          <details class="group ml-3 relative">
            <!-- Profile -->
            <summary class="flex text-sm cursor-pointer">
              <span class="sr-only">Open user menu</span>
              <div class="flex items-center space-x-2">
                <span class="inline-block h-6 w-6 rounded-full overflow-hidden bg-gray-200">
                  <svg class="h-full w-full text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
                  </svg>
                </span>
                <span class="inline-block h-3 w-3">
                  <!-- Icon: Chevron Up -->
                  <svg class="block group-open:hidden" fill="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                  </svg>
                  <!-- Icon: Chevron Down -->
                  <svg class="hidden group-open:block" fill="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 15l7-7 7 7" />
                  </svg>
                </span>
              </div>
            </summary>

            <!-- Dropdown Menu -->
            <div class="origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-10" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1">
              <%= link_to "アカウント設定", mypage_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", role: 'menuitem', tabindex: -1 %>
              <%= link_to "https://notsobad-jp.notion.site/notsobad-jp/167de8560b3c4860afc6f64e51f22371", class: "flex items-center space-x-1 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", role: 'menuitem', tabindex: -1, target: :_blank do %>
                <span>使い方</span>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                </svg>
              <% end %>
              <%= link_to "ログアウト", logout_path, data: { turbo_method: :delete }, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", role: 'menuitem', tabindex: -1 %>
            </div>
          </details>
        </div>
      <% else %>
        <div class="flex items-center py-2 space-x-8">
          <%= link_to "ログイン", login_path, class: "block text-sm text-gray-700 hover:bg-gray-100", role: 'menuitem', tabindex: -1 %>
          <%= link_to "アカウント登録", signup_path, class: "block rounded-md py-3 px-4 text-center text-sm font-semibold focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 bg-indigo-600 text-white shadow hover:bg-indigo-500", role: 'menuitem', tabindex: -1 %>
          <%= link_to "https://notsobad-jp.notion.site/notsobad-jp/167de8560b3c4860afc6f64e51f22371", class: "flex items-center space-x-1 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", role: 'menuitem', tabindex: -1, target: :_blank do %>
            <span>使い方</span>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- SP -->
    <div class="flex items-center sm:hidden">
      <details class="group -mr-2 flex items-center sm:hidden">
        <!-- Menu Button -->
        <summary class="inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-gray-800 hover:bg-gray-100 cursor-pointer">
          <span class="sr-only">Open main menu</span>
          <span class="inline-block h-6 w-6">
            <!-- Icon: Menu -->
            <svg class="block group-open:hidden" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
            <!-- Icon: X -->
            <svg class="hidden group-open:block" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </span>
        </summary>

        <!-- Dropdown Menu -->
        <div class="absolute top-20 left-0 w-full bg-white shadow z-10">
          <div class="pt-4 pb-3 border-t border-gray-200">
            <div class="flex items-center space-x-2 px-4">
              <div class="flex-shrink-0">
                <span class="inline-block h-8 w-8 rounded-full overflow-hidden bg-gray-100">
                  <svg class="h-full w-full text-gray-300" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
                  </svg>
                </span>
              </div>
              <div class="w-full overflow-hidden">
                <div class="text-base font-medium text-gray-800 text-ellipsis overflow-hidden">
                  <%= current_user&.email || "(ゲスト)" %>
                </div>
              </div>
            </div>
            <div class="mt-3 space-y-1">
              <% if current_user %>
                <%= link_to "新規配信を作成する", books_path, class: "block px-4 py-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100", role: 'menuitem', tabindex: -1 %>
                <%= link_to "購読済みの配信", distributions_path, class: "block px-4 py-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100", role: 'menuitem', tabindex: -1 %>
                <%= link_to "アカウント設定", mypage_path, class: "block px-4 py-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100", role: 'menuitem', tabindex: -1 %>
                <%= link_to "https://notsobad-jp.notion.site/notsobad-jp/167de8560b3c4860afc6f64e51f22371", class: "flex items-center space-x-1 px-4 py-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100", role: 'menuitem', tabindex: -1, target: :_blank do %>
                  <span>使い方</span>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                  </svg>
                <% end %>
                <%= link_to "ログアウト", logout_path, data: { turbo_method: :delete }, class: "block px-4 py-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100", role: 'menuitem', tabindex: -1 %>
              <% else %>
                <%= link_to "ログイン", login_path, class: "block px-4 py-2 text-gray-700 hover:bg-gray-100", role: 'menuitem', tabindex: -1 %>
                <%= link_to "アカウント登録", signup_path, class: "block px-4 py-2 text-gray-700 hover:bg-gray-100", role: 'menuitem', tabindex: -1 %>
                <%= link_to "https://notsobad-jp.notion.site/notsobad-jp/167de8560b3c4860afc6f64e51f22371", class: "flex items-center space-x-1 px-4 py-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100", role: 'menuitem', tabindex: -1, target: :_blank do %>
                  <span>使い方</span>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                  </svg>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </details>
    </div>
  </nav>
</header>
