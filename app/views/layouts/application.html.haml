!!!
%html
  %head
    %meta(content="text/html" charset="UTF-8" http-equiv="Content-Type")
    %meta(name="viewport" content="width=device-width" initial-scale="1.0" maximum-scale="1.0")
    %title Bungomailpro
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .ui.top.fixed.inverted.borderless.menu
      = link_to(root_path, class: 'header item') do
        ブンゴウメール
        %span.ui.red.label PRO
      .right.menu
        .ui.simple.dropdown.item
          %i.content.icon
          .inverted.menu
            - if current_user
              = link_to 'マイページ', subscriptions_path, class: 'item'
              = link_to 'ログアウト', logout_path, method: :post, class: 'item'
            - else
              = link_to 'ログイン', login_path, class: 'item'
    %div(style="margin-top: 50px;")
      - if controller.controller_name == 'pages'
        = yield
      - else
        .ui.container
          .ui.stackable.grid
            .ui.twelve.wide.column
              = yield
            .ui.four.wide.column
