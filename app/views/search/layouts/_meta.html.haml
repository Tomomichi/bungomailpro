%meta(charset="utf-8")
%script(async src="https://cdn.ampproject.org/v0.js")
%meta(name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1")
%link(rel="shortcut icon" href="/favicon.ico")
%link(rel="apple-touch-icon" sizes="128x128" href="/apple-touch-icon.png")
%link(rel="apple-touch-icon-precomposed" sizes="128x128" href="/apple-touch-icon-precomposed.png")

- title = current_page?(root_path) ? "ゾラサーチ by ブンゴウメール | 青空文庫の作品を読了時間で検索できるサービス" : "#{@meta_title} | ゾラサーチ"
%title= title
- description = current_page?(root_path) ? "ゾラサーチは、青空文庫の作品を目安の読了時間で検索できるサービスです。" : @meta_description
%meta(name="description" content="#{description}")
%meta(name="keywords" content="#{@meta_keywords},ゾラサーチ,読了時間,検索,青空文庫,無料,文学,古典,小説,ブンゴウメール,文豪,読書,毎日,毎月,継続,メール")

- canonical_url = @meta_canonical_url || url_for(only_path: false)
%link(rel="canonical" href="#{canonical_url}")

- if @meta_noindex
  %meta(name="robots" content="noindex")

%meta(property="og:site_name" content="ゾラサーチ")
%meta(property="og:title" content="#{title}")
%meta(property="og:type" content="website")
%meta(property="og:url" content="#{canonical_url}")
%meta(property="og:description" content="#{description}")
%meta(property="og:locale" content="ja_JP")

%meta(name="twitter:card" content="summary_large_image")
%meta(name="twitter:site" content="@bungomail")
%meta(name="twitter:description" content="#{description}")

- if @meta_image
  %meta(property="og:image" content="#{@meta_image}")
  %meta(name="twitter:image:src" content="#{@meta_image}")
- else
  %meta(property="og:image" content="https://bungomail.com/assets/images/ogp_search.png")
  %meta(name="twitter:image:src" content="https://bungomail.com/assets/images/ogp_search.png")


%script(async custom-element="amp-form" src="https://cdn.ampproject.org/v0/amp-form-0.1.js")

%style(amp-boilerplate)
  body{-webkit-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-moz-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-ms-animation:-amp-start 8s steps(1,end) 0s 1 normal both;animation:-amp-start 8s steps(1,end) 0s 1 normal both}@-webkit-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-moz-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-ms-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-o-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}
%noscript
  %style(amp-boilerplate)
    body{-webkit-animation:none;-moz-animation:none;-ms-animation:none;animation:none}

%link(href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet")

%style(amp-custom)
  - base_path = Rails.env.production? ? 'https://search.bungomail.com' : Rails.root.join("public")
  = File.read(File.join(base_path, "assets", "stylesheets", "search.css")).html_safe
