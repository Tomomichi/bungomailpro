%footer.ui.basic.center.aligned.inverted.segment
  %h5.ui.header
    = t :bungo_search, scope: [:search, :defaults]
    &nbsp;
    %small
      by
      = t :bungo_mail, scope: [:search, :defaults]
  - if lang_locale == :ja
    .ui.horizontal.list
      = link_to locale_root_url(juvenile: nil), class: 'item' do
        = t :normal_version, scope: [:search, :defaults]
      = link_to locale_root_url(juvenile: :juvenile), class: 'item' do
        = t :juvenile_version, scope: [:search, :defaults]
    %br
    %br
  %p
    = link_to about_page_path do
      %i.fas.fa-question-circle
      = t :about_this_site, scope: [:search, :defaults]
  .ui.horizontal.list
    .item
      = link_to "https://twitter.com/intent/tweet?hashtags=#{t(:bungo_search, scope: [:search, :defaults]).downcase.delete(' ')}&url=#{locale_root_url}&text=#{t(:bungo_search, scope: [:search, :defaults])} - #{t(:tagline_sp, scope: [:search, :layouts, :application])}%0A", target: '_blank', class: 'ui circular twitter icon button' do
        %i.fab.fa-twitter
    .item
      = link_to 'https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fsearch.bungomail.com%2F&display=popup&ref=plugin&src=like&kid_directed_site=0&app_id=139414576217599', target: '_blank', class: 'ui circular facebook icon button' do
        %i.fab.fa-facebook-f
  %br
  %br
  .ui.horizontal.list
    = link_to t(:bungo_search, scope: [:search, :defaults]), locale_root_url, class: 'item'
    = link_to t('.terms'), page_url(:terms, subdomain: '', locale: lang_locale, juvenile: nil), class: 'item'
    = link_to t('.privacy_policy'), page_url(:privacy, subdomain: '', locale: lang_locale, juvenile: nil), class: 'item'
    = link_to t('.contacts'), 'https://goo.gl/forms/jE387feQLYysiv5m2', target: '_blank', class: 'item'
    = link_to t('.company'), 'https://notsobad.jp', target: '_blank', class: 'item'
  %br/
  %br/
  %br/
  %div
    %small
      Copyright
      = t :bungo_search, scope: [:search, :defaults]
      by
      = t :bungo_mail, scope: [:search, :defaults]
      2019 All rights reserved.
    %br
    %small
      Powered by
      %a{:href => "https://notsobad.jp", :target => "_blank"} NOT SO BAD, LLC.
