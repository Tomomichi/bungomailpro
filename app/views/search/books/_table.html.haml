%small
  = t('.search_offset', from: books.offset_value + 1, to: books.offset_value + books.length, count: books.total_count.to_s(:delimited))
%table.ui.fixed.unstackable.table
  %thead
    %tr.computer.only
      %th.five.wide= t :title, scope: [:search, :defaults]
      %th.four.wide= t :author, scope: [:search, :defaults]
      %th.four.wide= t :minutes_to_read, scope: [:search, :defaults]
      %th.two.wide= t :popularity, scope: [:search, :defaults]
      %th.five.wide.computer.only= t :beginning, scope: [:search, :defaults]

    %tr.mobile.only
      %th.six.wide
        %small= t :title, scope: [:search, :defaults]
      %th.six.wide
        %small= t :author, scope: [:search, :defaults]
      %th.nine.wide
        %small= t :minutes_to_read, scope: [:search, :defaults]
        %small.right.floated= t :popularity, scope: [:search, :defaults]
  %tbody
    - if books.blank?
      %tr
        %td(colspan="3")= t '.no_results'
    - books.each do |book|
      %tr.computer.only
        %td
          = link_to author_category_book_path(author_id: book.author_id, category_id: book.category_id, id: book.id) do
            = book.title
            - if book.rights_reserved?
              %small
                %i.far.fa-copyright
        %td
          = link_to author_category_books_path(author_id: book.author_id, category_id: category[:id]) do
            = book.author.split(',').first
        %td
          = link_to author_category_books_path(author_id: author[:id], category_id: book.category_id) do
            = category_label(book.category)
          &nbsp;
          %small
            = book.words_count.to_s(:delimited)
            = t :words, scope: [:search, :defaults]
        %td
          = access_count_stars(book.access_rating(:stars))
        %td
          %small= book.beginning.truncate(30)

      %tr.mobile.only.main
        %td
          = link_to author_category_book_path(author_id: book.author_id, category_id: book.category_id, id: book.id) do
            = book.title
            - if book.rights_reserved?
              %small
                %i.far.fa-copyright
        %td
          = link_to author_category_books_path(author_id: book.author_id, category_id: category[:id]) do
            = book.author.split(',').first
        %td
          = link_to author_category_books_path(author_id: author[:id], category_id: book.category_id) do
            = category_label(book.category)
          %small.right.floated= access_count_stars(book.access_rating(:stars))
      %tr.mobile.only.sub
        %td(colspan="3")
          %small= book.beginning

%small
  = t '.copyright_reserved.html'
