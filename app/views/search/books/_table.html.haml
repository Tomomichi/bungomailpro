%small
  #{books.offset_value + 1}〜#{books.offset_value + books.length }件
  \/ 全#{books.total_count.to_s(:delimited)}件
%table.ui.single.line.fixed.table
  %thead
    %tr
      %th.three.wide 作品名
      %th.three.wide 著者
      %th.four.wide 文字数
      %th.two.wide
        人気
        %i.icon.small.caret.down
      %th.five.wide 書き出し
  %tbody
    - books.each do |book|
      %tr
        %td
          -# TODO: category_idをちゃんと入れる
          = link_to book.title, author_category_book_path(author_id: book.author_id, category_id: book.category.id, id: book.id)
        %td
          = link_to author_category_books_path(author_id: book.author_id, category_id: 'all') do
            = book.author
        %td
          = book.words_count.to_s(:delimited)
          %small 文字
          &nbsp;
          = link_to author_category_books_path(author_id: 'all', category_id: book.category.id) do
            = category_label(book.category)
        %td
          = access_count_stars(book.access_count)
        %td
          %small= book.beginning.truncate(30)
